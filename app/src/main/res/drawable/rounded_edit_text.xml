<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Warna latar belakang -->
    <corners android:radius="12dp" /> <!-- Radius sudut -->
    <stroke
        android:width="1dp"
        android:color="#C0C0C0" /> <!-- Warna border -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" /> <!-- Padding untuk shadow -->
    <size android:height="48dp" /> <!-- Ukuran yang sesuai dengan EditText -->

    <item>
        <shape>
            <solid android:color="#88000000" /> <!-- Warna bayangan -->
            <corners android:radius="12dp" /> <!-- Radius sudut untuk bayangan -->
        </shape>
    </item>
</shape>


